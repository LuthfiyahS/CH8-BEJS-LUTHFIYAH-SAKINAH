        <!-- START: Main Content-->
        <div class="container">
            <div class="row vh-100 justify-content-between align-items-center">
                <div class="col-12">
                    <form action="/forgot-password" method="post" class="row row-eq-height lockscreen  mt-5 mb-5">
                        
                        <div class="login-form col-12 col-sm-12">
                            <h5>Forgot Password</h5>
                            <!-- <div class="mt-2">We will send OTP on your emal account</div> -->
